@{

    var lista = (IList<Inmueble>)ViewBag.lista;
    ViewData["Title"] = "Lista de Inmuebles";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card" id="card-form">
                <div class="card-header">
                    <h1 class="display-4 text-center">INMUEBLES</h1>
                </div>
                <div class="card-body">
                    <form class="my-2" method="get" action="">
                        <div class="form-group row">
                            <div class="col-md-8">
                                <input type="text" name="search" placeholder="Buscar inmuebles..."
                                    class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><ion-icon
                                        name="search-outline"></ion-icon></button>
                            </div>
                        </div>
                    </form>

                    @if (lista.Count != 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Direccion</th>
                                        <th>Uso</th>
                                        <th>Tipo</th>
                                        <th>CantidadAmbientes</th>
                                        <th>Coordenadas</th>
                                        <th>PrecioInmueble</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in lista)
                                    {
                                        <tr class="accordion-toggle" data-toggle="collapse" data-target="#fila-@item.Id">
                                            <td>@item.Direccion</td>
                                            <td>@item.Uso</td>
                                            <td>@item.Tipo</td>
                                            <td>@item.CantidadAmbientes</td>
                                            <td>@item.Coordenadas</td>
                                            <td>@item.PrecioInmueble</td>
                                            <td>@item.Estado</td>
                                            <td>
                                                <div class="btn-group" role="group" aria-label="Acciones">
                                                    <a href="@Url.Action("Update", new { id = item.Id })"
                                                        class="btn btn-outline-secondary"><ion-icon
                                                            name="create-outline"></ion-icon>
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = item.Id })"
                                                        class="btn btn-outline-danger" id="btn-delete-@item.Id"><ion-icon
                                                            name="trash-outline"></ion-icon> </a>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr class="hiddenRow">
                                            <td colspan="8">
                                                <div class="collapse" id="fila-@item.Id">
                                                    <div class="card card-body">
                                                        <h3>Propietario:</h3>
                                                        <p>Nombre: @item.Propietario.Nombre </p>
                                                        <p>Apellido: @item.Propietario.Apellido </p>
                                                        <p>Dni: @item.Propietario.Dni </p>
                                                        <p>Telefono: @item.Propietario.Telefono </p>
                                                        <p>Email: @item.Propietario.Email </p>
                                                        
                                                        <h3>Contrato:</h3>
                                                        <p>Fecha inicial: @item.Contrato.FechaInicio </p>
                                                        <p>Fecha Final: @item.Contrato.FechaFinalizacion </p>
                                                        <p>Monto mensual: @item.Contrato.MontoAlquilerMensual </p>
                                                        <p>Activo: @item.Contrato.Activo </p>
                                                        <p>Id Inquilino: @item.Contrato.IdInquilino </p>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    }
                    else
                    {
                        <h2 class="text-center">No hay inmuebles en el sitio</h2>
                    }
                </div>
                <div class="card-footer text-end" id="add">
                    <a class="btn btn-success" href="@Url.Action("Create")" role="button"><ion-icon
                            name="add-outline"></ion-icon>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row mt-4">

    <div class="col-md-4">
        <div class="card bg-secondary text-white">
            <div class="card-body">
                <h5 class="card-title">Inmuebles totales</h5>
                <p class="card-text">@lista.Count()</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-secondary text-white">
            <div class="card-body">
                <h5 class="card-title">Inmuebles totales</h5>
                <p class="card-text">@lista.Count()</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-secondary text-white">
            <div class="card-body">
                <h5 class="card-title">Inmuebles totales</h5>
                <p class="card-text">@lista.Count()</p>
            </div>
        </div>
    </div>

</div>





