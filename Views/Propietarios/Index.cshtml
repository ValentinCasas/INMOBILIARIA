@model List<Propietario>
@{
    List<Propietario> lista = Model;
    ViewData["Title"] = "Home Page";
}
<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Propietarios:</h1>
        @if (lista.Count != 0)
        {
            <ul class="list-group">
                @foreach (var item in lista)
                {
                    <li class="list-group-item my-1 p-2 d-flex justify-content-between align-items-center">
                        <span><b>Nombre:</b> @item.Nombre</span>
                        <span><b>Apellido:</b> @item.Apellido</span>
                        <span><b>Dni:</b> @item.Dni</span>
                        <span><b>Telefono:</b> @item.Telefono</span>
                        <span><b>Email:</b> @item.Email</span>

                        <a href="@Url.Action("Update", new { id = item.Id })" class="btn d-inline-block"
                            style="background-color: rgba(12, 124, 199, 0.918);">ACTUALIZAR</a>

                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn d-inline-block"
                            style="background-color: rgba(255, 0, 0, 0.753);">BORRAR</a>    

                    </li>
                }
            </ul>
        }
        else
        {
            <h2>No hay personas en el sitio</h2>
        }
    </div>
    <div class="text-center mt-3">
        <a class="btn btn-primary" href="Propietarios/Create" role="button">Agregar propietario</a>
    </div>
</div>






<style>
    body {
        background-color: rgb(35, 39, 48);
    }

    a {
        text-decoration: none;
        color: rgb(255, 255, 255);
    }

    a:hover {
        color: rgb(49, 43, 43);
    }

    .list-group-item {
        background-color: #474749;
        color: wheat;
    }

    h1 {
        color: wheat;
    }
</style>