@model Propietario
@{
    Propietario propietario = Model;
    ViewData["Title"] = "Actualizar Persona";
}

<div class="d-flex justify-content-center align-items-center col-lg-5">
    <form class="container mt-5" asp-action="UpdatePropietario" method="post">

        <h1> Actualizar propietario </h1>
        <input type="hidden" id="id" value="@propietario.Id" name="id">
        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input class="form-control" type="text" id="nombre" name="nombre" value="@propietario.Nombre">
        </div>
        <div class="form-group">
            <label for="direccion">Apellido:</label>
            <input class="form-control" type="text" id="apellido" name="apellido" value="@propietario.Apellido">
        </div>
        <div class="form-group">
            <label for="telefono">Telefono:</label>
            <input class="form-control" type="text" id="telefono" name="telefono" value="@propietario.Telefono">
        </div>
        <div class="form-group">
            <label for="dni">Dni:</label>
            <input class="form-control" type="text" id="dni" name="dni"
                value='@propietario.Dni'>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input class="form-control" type="text" id="email" name="email"
                value='@propietario.Email'>
        </div>
        <button class="btn btn-primary my-2" type="submit">Guardar</button>
    </form>
</div>


<style>
    body {
        background-color: rgb(35, 39, 48);
    }

    label,
    h1 {
        color: white;
    }

    .form-control {
        background-color: #474749;
    }
</style>